{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pull assembly scripts",
            "type": "shell",
            "command": "poetry run python -m backend.tools.pull_scripts"
        },
        {
            "label": "Production build",
            "type": "npm",
            "script": "build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Launch frontend",
            "type": "npm",
            "script": "dev",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Launch backend",
            "type": "shell",
            // "command": "poetry run python -m backend.server",
            "command": "poetry run flask --app backend.server run",
            "group": {
                "kind": "build"
            }
        }
    ]
}
