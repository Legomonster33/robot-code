{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pull assembly scripts",
            "type": "shell",
            "command": "poetry run python -m backend.tools.pull_scripts"
        },
        {
            "label": "Production build",
            "type": "npm",
            "script": "build",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Launch servers",
            "dependsOn": ["Launch frontend", "Launch backend"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Launch frontend",
            "type": "npm",
            "script": "dev",
            "problemMatcher": [],
            "presentation": {
                "group": "server"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Launch backend",
            "type": "shell",
            "command": "poetry",
            "args": [
                "run",
                "flask",
                "--app",
                "backend.server",
                "run",
                "--debug",
                "--cert",
                "credentials/cert.pem",
                "--key",
                "credentials/key.pem",
                "--port",
                "3000"
            ],
            "presentation": {
                "group": "server"
            }
        }
    ]
}
